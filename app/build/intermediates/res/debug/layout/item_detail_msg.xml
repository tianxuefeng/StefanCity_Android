<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<!-- 日期 -->
	<TextView
	 	android:id="@+id/lab_item_msg_time"
	 	android:layout_width="wrap_content"
	 	android:layout_height="wrap_content"
	 	android:layout_alignParentRight="true"
	 	style="@style/txtAddressStyle"   
     	android:textColor="@color/color_999"
     	android:textSize="16sp"
     	android:text="2014-07-11"
	/>
    <TextView
     	android:id="@+id/lab_item_msg_name"
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:layout_toLeftOf="@+id/lab_item_msg_time"
     	style="@style/txtAddressStyle"   
     	android:textColor="@color/color_999"
     	android:gravity="left"
     	android:textSize="18sp"
     	android:text="评论人"
    />
    <!-- msg -->
    <TextView
     	android:id="@+id/lab_item_msg_info"
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:layout_below="@+id/lab_item_msg_name"
     	style="@style/txtAddressStyle"   
     	android:textColor="@color/font_333"
     	android:gravity="left"
     	android:textSize="18sp"
     	android:text="评论内容"
    />
</RelativeLayout>
