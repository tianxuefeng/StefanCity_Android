<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:id="@+id/layout_favoriteTop"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:background="@color/theme_color" 
		android:orientation="horizontal"
	>
	    <Button
	        android:id="@+id/btn_favorite_back"
	     	android:layout_width="wrap_content"
	     	android:layout_height="wrap_content"
	     	android:layout_alignParentLeft="true"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="5dip"
	     	android:background="@drawable/btn_back"
	    />
	    <TextView
	        android:id="@+id/lab_favorite_title"
	     	android:layout_width="100dip"
	     	android:layout_height="wrap_content"
	     	android:layout_centerHorizontal="true"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="5dip"
	     	style="@style/txtAddressStyle"
	     	android:layout_toRightOf="@+id/btn_favorite_back"
	     	android:layout_toLeftOf="@+id/btn_favorite_clear"
	     	android:textSize="22sp"
	     	android:singleLine="true"
	     	android:text="@string/lab_user_favorites"
	    />
	    <Button
	        android:id="@+id/btn_favorite_clear"
	     	android:layout_width="wrap_content"
	     	android:layout_height="match_parent"
	     	android:layout_alignParentRight="true"
	     	android:layout_marginRight="10dip"
	     	style="@style/txtAddressStyle"
	     	android:layout_centerVertical="true"
	     	android:textSize="20sp"
	     	android:background="@null"
	     	android:text="@string/btn_clear"
	    />
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/layout_favoriteContent"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@color/bg_fb"
		android:orientation="vertical"
	>
	    <TextView
	        android:id="@+id/lab_favorite_notinfo"
		 	android:layout_width="fill_parent"
		 	android:layout_height="match_parent"
		 	android:text="@string/history_NoInfo"
		 	android:textColor="@color/color_999"
		 	android:gravity="center_vertical|center_horizontal"
		 	android:textSize="25sp"
		 	android:visibility="gone"
		 />
	    <ListView
	     	android:id="@+id/favorite_listView"
	     	android:layout_width="fill_parent"
	     	android:layout_height="match_parent"
	     	android:cacheColorHint="#00000000"   
	    />
	</LinearLayout>

</LinearLayout>
