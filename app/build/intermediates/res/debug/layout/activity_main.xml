<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:adsmogo="http://www.adsmogo.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/mainPager"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/adLayout"
        />
    <!-- <RelativeLayout
	    android:id="@+id/adLayout"
	    android:layout_width="fill_parent"
        android:layout_height="50dip"
		android:layout_above="@+id/main_navLayout"
	    android:gravity="center_horizontal">
	</RelativeLayout>
    -->
    <com.adsmogo.adview.AdsMogoLayout
        android:id="@+id/adsMogoView"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
		android:layout_above="@+id/main_navLayout"
        adsmogo:appid="db09b4c3632f45ee87ec22b1e62369c3" >
    </com.adsmogo.adview.AdsMogoLayout>
    
   	<RelativeLayout
	    android:id="@+id/main_navLayout"
        android:layout_width="fill_parent"
        android:layout_height="65dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        >
		<RadioGroup
	    	android:id="@+id/mRadioGroupLoc"   
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent" 
	    	android:gravity="center_vertical|center_horizontal"
	    	android:orientation="horizontal"
	    	android:layout_toLeftOf="@+id/layout_bottomRight"
	    	android:background="#FF3f5968"
	    >
	    	<RadioButton
	         	android:id="@+id/mRadioBtnMain"
	         	android:layout_weight="1"   
	         	android:layout_width="fill_parent"
	         	android:layout_height="fill_parent"
	         	android:text="@string/main_nav_home"
	         	style="@style/reNavRadioButton"
	        />
	        <RadioButton
	         	android:id="@+id/mRadioBtnScore"
	         	android:layout_weight="1"   
	         	android:layout_width="fill_parent"
	         	android:layout_height="fill_parent"
	         	android:text="@string/main_nav_score"
	         	style="@style/reNavRadioButton"
	        />
	        <RadioButton
	         	android:id="@+id/mRadioBtnUser"
	         	android:layout_weight="1"   
	         	android:layout_width="fill_parent"
	         	android:layout_height="fill_parent"
	         	android:text="@string/main_nav_user"
	         	style="@style/reNavRadioButton"
	        />
	    </RadioGroup>
		<LinearLayout 
			android:id="@+id/layout_bottomRight"
			android:layout_width="80dip"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:gravity="center_vertical|center_horizontal"
			android:layout_alignParentRight="true"  
			android:background="#FF3f5968"
		>
			<TextView
			 	android:layout_width="fill_parent"
			 	android:layout_height="wrap_content"
			 	android:text="@string/btn_send"
				android:gravity="center_horizontal"
				android:drawableTop="@drawable/icon_send"
				android:textSize="18sp"
				android:textColor="@color/white"
			 	style="@style/RETextView"
			/>
		</LinearLayout>
    </RelativeLayout>
	
</RelativeLayout>
