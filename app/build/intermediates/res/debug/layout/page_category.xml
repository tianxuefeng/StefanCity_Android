<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="50dip"
    	android:background="@color/theme_color"
    >
        <Button
         	android:id="@+id/btnMainAddress"
         	android:layout_width="wrap_content"
         	android:layout_height="match_parent"
         	android:maxWidth="100dip"
         	android:text="@string/lab_main_address"
         	android:layout_alignParentLeft="true"
         	android:layout_centerVertical="true"
         	android:layout_marginLeft="15dip"
         	android:singleLine="true"
         	android:ellipsize="end"
         	android:background="@null"
         	android:textColor="@color/white"
         	android:textSize="18sp"
         	android:drawableRight="@drawable/btn_icon_bottom" 
        />
        <TextView
         	android:id="@+id/labMainAddress"
         	android:layout_width="fill_parent"
         	android:layout_height="wrap_content" 
         	android:layout_toRightOf="@+id/btnMainAddress"
         	android:layout_toLeftOf="@+id/iconMainLogo"
         	android:layout_centerHorizontal="true"
         	android:layout_centerVertical="true"
         	android:layout_marginLeft="5dip"
         	android:layout_marginRight="5dip"
         	android:gravity="center"
         	android:text="福州同城"  
         	android:singleLine="true"
         	android:ellipsize="end"
         	android:textColor="@color/white"
         	android:textSize="20sp"
        />
        <ImageView
         	android:id="@+id/iconMainLogo"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:background="@drawable/logo"   
         	android:layout_alignParentRight="true"
         	android:layout_centerVertical="true"
         	android:layout_marginRight="5dip"
        />
    </RelativeLayout>
    <TextView
	        android:id="@+id/lab_main_category_notinfo"
		 	android:layout_width="fill_parent"
		 	android:layout_height="match_parent"
		 	android:text="@string/msg_loading_error_reset"
		 	android:textColor="@color/color_999"
		 	android:gravity="center_vertical|center_horizontal"
		 	android:visibility="gone"
		 	android:textSize="25sp"
		 />
	<GridView
	 	android:id="@+id/sortGridView"
	 	android:layout_width="match_parent"
	 	android:layout_height="match_parent"   
	 	android:layout_marginTop="20dip"
	 	android:horizontalSpacing="20dip"
	 	android:verticalSpacing="20dip"
	 	android:background="@android:color/transparent"
	 	android:numColumns="4"
	/>
</LinearLayout>
