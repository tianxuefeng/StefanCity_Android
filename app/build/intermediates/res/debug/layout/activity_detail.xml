<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
	    android:id="@+id/layout_mainTop"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:background="@color/theme_color" 
		android:orientation="horizontal"
	>
	    <Button
	        android:id="@+id/detail_back"
	     	android:layout_width="wrap_content"
	     	android:layout_height="wrap_content"
	     	android:layout_alignParentLeft="true"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="10dip"
	     	android:background="@drawable/btn_back"
	    />
	    <TextView
	        android:id="@+id/detail_header"
	     	android:layout_width="match_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_centerHorizontal="true"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="5dip"
	     	android:layout_toRightOf="@+id/detail_back"
	     	android:layout_toLeftOf="@+id/detail_favorite"
	     	android:singleLine="true"
	     	style="@style/txtAddressStyle"
	     	android:textStyle="bold"
	     	android:textSize="24sp"
	     	android:text="@string/lab_detail"
	    />
	    <Button
			    android:id="@+id/detail_favorite"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="10dip"
			    android:layout_marginLeft="5dip"
		     	style="@style/txtAddressStyle"
		     	android:textSize="20sp"
		     	android:background="@null"
			    android:layout_centerVertical="true"
			    android:text="@string/btn_favorites"
			/>
	</RelativeLayout>
	<!-- 信息访问量和名称 -->
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:orientation="horizontal"
		android:padding="5dip"
		android:background="@color/color_eee"
	>
	    <!-- 热度 -->
		<TextView
	        android:id="@+id/txt_detail_info_reads"
	     	android:layout_width="wrap_content"
	     	android:layout_height="wrap_content"
	     	android:layout_alignParentRight="true"
	     	android:layout_centerVertical="true"
	     	style="@style/txtAddressStyle"
	     	android:textSize="15sp"
	     	android:padding="0dip"
	     	android:layout_marginRight="5dip"
	     	android:visibility="gone"
	     	android:text="2014"
	     	android:textColor="@color/font_333"
	    />
		<TextView
	        android:id="@+id/lab_detail_info_reads"
	     	android:layout_width="wrap_content"
	     	android:layout_height="wrap_content"
	     	android:layout_toLeftOf="@+id/txt_detail_info_reads"
	     	android:layout_alignBottom="@+id/txt_detail_info_reads"
	     	style="@style/txtAddressStyle"
	     	android:textSize="15sp"
	     	android:text="@string/lab_detail_reads"
	     	android:visibility="gone"
	     	android:padding="0dip"
	     	android:textColor="@color/font_666"
	    />
		<TextView
	        android:id="@+id/detail_title"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_marginLeft="5dip"
	     	android:layout_alignParentLeft="true"
	     	android:layout_toLeftOf="@+id/lab_detail_info_reads"
	     	android:layout_centerVertical="true"
	     	android:singleLine="true"
	     	android:ellipsize="end"
	     	style="@style/txtAddressStyle"
	     	android:gravity="left"
	     	android:padding="0dip"
	     	android:textSize="20sp"
	     	android:text="@string/lab_detail"
	     	android:textColor="@color/font_333"
	    />
	</RelativeLayout>
    <RelativeLayout
	    android:id="@+id/detail_navLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
		<RadioGroup
	    	android:id="@+id/mRadioGroupDetailLoc" 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:gravity="center_vertical|center_horizontal"
	    	android:orientation="horizontal"
	    	android:background="@color/color_ddd"
	    >
	    	<RadioButton
	         	android:id="@+id/mRadioBtnDetailInfo"
	         	android:layout_weight="1"
	         	android:layout_width="fill_parent"
	         	android:layout_height="fill_parent"
	         	android:text="@string/lab_detail_info"
	         	android:background="@drawable/tab_selected"
	         	android:textSize="18sp"
	         	style="@style/reNavRadioButton"
	        />
	    	<TextView
	            android:layout_width="1dip"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_horizontal|center_vertical"
	            android:layout_marginTop="2dip"
	            android:layout_marginBottom="2dip"
	            android:background="@color/color_ccc" />
	        <RadioButton
	         	android:id="@+id/mRadioBtnDetailMsg"
	         	android:layout_weight="1"
	         	android:layout_width="fill_parent"
	         	android:layout_height="fill_parent"
	         	android:text="@string/lab_detail_message"
	         	android:textSize="18sp"
	         	style="@style/reNavRadioButton"
	        />
	    </RadioGroup>
    </RelativeLayout>
	<android.support.v4.view.ViewPager
        android:id="@+id/detailPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
</LinearLayout>
