<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:background="@color/theme_color" 
		android:orientation="horizontal"
	>
	    <Button
	        android:id="@+id/btn_manage_region_back"
	     	android:layout_width="wrap_content"
	     	android:layout_height="wrap_content"
	     	android:layout_alignParentLeft="true"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="5dip"
	     	android:background="@drawable/btn_back"
	    />
	    <TextView
	        android:id="@+id/lab_manage_region_list_tit"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_centerHorizontal="true"
	     	android:layout_centerVertical="true"
	     	android:layout_marginLeft="5dip"
	     	android:layout_toRightOf="@id/btn_manage_region_back"
	     	android:layout_toLeftOf="@+id/btn_region_other_city"
	     	style="@style/txtAddressStyle"
	     	android:textSize="22sp"
	     	android:text="@string/lab_local_sel_area"
	    />
	    <Button
	        android:id="@+id/btn_region_other_city"
	     	android:layout_width="wrap_content"
	     	android:layout_height="match_parent"
	     	android:layout_alignParentRight="true"
	     	android:layout_marginRight="10dip"
	     	style="@style/txtAddressStyle"
	     	android:layout_centerVertical="true"
	     	android:textSize="20sp"
	     	android:background="@null"
	     	android:text="@string/btn_back_locat"
	    />
	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
     	android:layout_marginTop="10dip"
	    android:orientation="horizontal"
	    android:gravity="left"
	    >
	    <Button
	        android:id="@+id/btn_manage_other_street"
	     	android:layout_width="wrap_content"
	     	android:minWidth="100dip"
	     	android:layout_height="wrap_content"
	     	android:layout_marginLeft="10dip"
	     	android:layout_alignParentLeft="true"
	     	android:textSize="20sp"
	     	android:padding="5dip"
	     	android:text="@string/btn_select_street"
		    android:textColor="@color/white"
		    android:background="@drawable/btn_red_selector"
	    />
	    <Button
	        android:id="@+id/btn_manage_region_add"
	     	android:layout_width="wrap_content"
	     	android:minWidth="100dip"
	     	android:layout_height="wrap_content"
	     	android:layout_marginRight="10dip"
	     	android:layout_alignParentRight="true"
	     	android:textSize="20sp"
	     	android:padding="5dip"
	     	android:text="@string/btn_add_region"
		    android:textColor="@color/white"
		    android:background="@drawable/btn_red_selector"
	    />
	</RelativeLayout>
	<TextView
	        android:id="@+id/lab_manage_region_notinfo"
		 	android:layout_width="fill_parent"
		 	android:layout_height="match_parent"
		 	android:text="@string/history_NoInfo"
		 	android:textColor="@color/color_999"
		 	android:visibility="gone"
		 	android:gravity="center_vertical|center_horizontal"
		 	android:textSize="25sp"
		 />
	<ListView
	     	android:id="@+id/listView_manage_region"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:cacheColorHint="#00000000"   
	     	android:layout_marginTop="5dip"
	     	android:divider="@drawable/div_line"
	     	android:visibility="gone"
	     	android:dividerHeight="1dip"
	     	android:background="@color/bg_fb" 
	    />

</LinearLayout>
