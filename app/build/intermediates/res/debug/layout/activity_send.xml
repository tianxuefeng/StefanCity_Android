<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="50dip"
			android:background="@color/theme_color" 
			android:orientation="horizontal"
		>
		    <Button
		        android:id="@+id/btn_send_back"
		     	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:layout_alignParentLeft="true"
		     	android:layout_centerVertical="true"
		     	android:layout_marginLeft="5dip"
		     	android:background="@drawable/btn_back"
		    />
		    <TextView
		        android:id="@+id/lab_send_title"
		     	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:layout_centerHorizontal="true"
		     	android:layout_marginLeft="5dip"
		     	android:layout_centerVertical="true"
		     	android:singleLine="true"
		     	style="@style/txtAddressStyle"
		     	android:textSize="22sp"
		     	android:text="@string/btn_sendinfo"
		    />
		</RelativeLayout>
		<ScrollView 
	        android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:scrollbars="none"
        >
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		>
		<!-- 选择图片 -->
		<HorizontalScrollView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="1dip"
		    android:layout_margin="5dip"
		    android:scrollbars="none"
		>
		    <LinearLayout 
		        android:id="@+id/send_imgsViewPager"   
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    >
		    </LinearLayout>
		</HorizontalScrollView>
		<!-- 类别 -->
		<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/layoutbg1"  
			android:layout_margin="5dip"
			android:orientation="vertical"
			android:gravity="center_vertical"
		>
		    <!-- 类别 -->
		        <TextView
		            android:id="@+id/lab_sendParentCategory"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_category_parent_name"
		        	style="@style/txtSendStyle"
		        />
		        <Button
		            android:id="@+id/btn_sendParentCategory"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_marginRight="5dip"
		         	android:layout_toRightOf="@+id/lab_sendParentCategory"
		         	android:text="@string/hint_sel_category"
		         	style="@style/editSendStyle"
		        />
		</RelativeLayout>
		<!-- 类别 -->
		<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/layoutbg1"  
			android:layout_margin="5dip"
			android:orientation="vertical"
			android:gravity="center_vertical"
		>
		    <!-- 类别 -->
		        <TextView
		            android:id="@+id/lab_sendCategory"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_category"
		        	style="@style/txtSendStyle"
		        />
		        <Button
		            android:id="@+id/btn_sendCategory"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_marginRight="5dip"
		         	android:layout_toRightOf="@+id/lab_sendCategory"
		         	android:text="@string/hint_sel_category"
		         	style="@style/editSendStyle"
		        />
		</RelativeLayout>
		
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/layoutbg1"  
			android:layout_margin="5dip"
			android:orientation="vertical"
		>
		    <!-- 标题 -->
		    <RelativeLayout
		    	android:id="@+id/send_row_title"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="8dip"
		    	android:layout_marginBottom="8dip"
		    	android:orientation="horizontal"
		    	android:gravity="center_vertical"
		    >
		        <TextView
		            android:id="@+id/lab_sendTitle"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_title"
		        	style="@style/txtSendStyle"
		        />
		        <EditText
		            android:id="@+id/edit_sendTitle"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_marginRight="5dip"
		         	android:layout_toRightOf="@+id/lab_sendTitle"
		         	android:hint="@string/hint_title"
		         	style="@style/editSendStyle"
		        />
		    </RelativeLayout>
		    <ImageView
		     	android:layout_width="fill_parent"
		     	android:layout_height="1dip"
		     	android:layout_marginLeft="5dip"
		     	android:layout_marginRight="5dip"
		     	android:layout_gravity="center_horizontal"
		     	android:background="@drawable/div_line"   
		    />
		    <!-- 详细 -->
		    <RelativeLayout
		    	android:id="@+id/send_row_desc"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="8dip"
		    	android:layout_marginBottom="8dip"
		    	android:orientation="horizontal"
		    	android:gravity="center_vertical"
		    >
				<TextView
		            android:id="@+id/lab_sendDesc"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_desc"
		        	style="@style/txtSendStyle"
		        />	        
		        <EditText
		            android:id="@+id/edit_sendDesc"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_marginRight="5dip"
		         	android:layout_toRightOf="@+id/lab_sendDesc"
		         	android:hint="@string/hint_desc"
		         	style="@style/editSendStyle"
		        />
		    </RelativeLayout>
		</LinearLayout>
		<RelativeLayout 
		    android:id="@+id/layout_send_price"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/layoutbg1"  
			android:layout_margin="5dip"
			android:orientation="vertical"
			android:gravity="center_vertical"
		>
		    <!-- 价格 -->
		        <TextView
		            android:id="@+id/lab_sendPrice"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_price"
		        	style="@style/txtSendStyle"
		        />
		        <TextView
		            android:id="@+id/lab_sendPriceUnit"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentRight="true"
		        	android:text="@string/lab_send_price_unit"
		        	android:drawableRight="@null"
		        	style="@style/txtSendStyle"
		        />
		        <EditText
		            android:id="@+id/edit_sendPrice"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:numeric="decimal"
		         	android:textStyle="bold"
		         	android:maxLength="9"
		         	android:layout_toRightOf="@+id/lab_sendPrice"
		         	android:layout_toLeftOf="@+id/lab_sendPriceUnit"
		         	style="@style/editSendStyle"
		        />
		</RelativeLayout>
		<!-- 地区 -->
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/layoutbg1"  
			android:layout_margin="5dip"
			android:orientation="vertical"
		>
		    <!-- 城市 -->
		    <RelativeLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dip"
			    android:layout_marginBottom="8dip"
				android:gravity="center_vertical"
			>
		    	<!-- 选择城市 -->
		        <TextView
		            android:id="@+id/lab_sendCity"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_city"
		        	style="@style/txtSendStyle"
		        />
		        <Button
		            android:id="@+id/btn_sendCity"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_toRightOf="@+id/lab_sendCity"
		         	android:text="@string/hint_sel_city"
		         	style="@style/editSendStyle"
		        />
			</RelativeLayout>
			<RelativeLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dip"
			    android:layout_marginBottom="8dip"
				android:gravity="center_vertical"
			>
		    <!-- 地区 -->
		        <TextView
		            android:id="@+id/lab_sendAddress"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_address"
		        	style="@style/txtSendStyle"
		        />
		        <Button 
		            android:id="@+id/btn_localAddress"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="5dip"
		            android:visibility="gone"
		            android:background="@drawable/btn_icon_local"
		            />
		        <Button
		            android:id="@+id/btn_sendAddress"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_toRightOf="@+id/lab_sendAddress"
		         	android:layout_toLeftOf="@+id/btn_localAddress"
		         	android:text="@string/hint_sel_region"
		         	style="@style/editSendStyle"
		        />
			</RelativeLayout>
			<!-- 街道 -->
		    <RelativeLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dip"
			    android:layout_marginBottom="8dip"
				android:gravity="center_vertical"
				android:visibility="gone"
			>
		    	<!-- 选择街道 -->
		        <TextView
		            android:id="@+id/lab_sendStreet"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_street"
		        	style="@style/txtSendStyle"
		        />
		        <Button
		            android:id="@+id/btn_sendStreet"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_toRightOf="@+id/lab_sendStreet"
		         	android:text="@string/hint_sel_street"
		         	style="@style/editSendStyle"
		        />
			</RelativeLayout>
		</LinearLayout>
		<!-- 联系方式 -->
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/layoutbg1"  
			android:layout_margin="5dip"
			android:orientation="vertical"
		>
		    <!-- 联系人 -->
		    <RelativeLayout
		    	android:id="@+id/send_row_contact"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="8dip"
		    	android:layout_marginBottom="8dip"
		    	android:orientation="horizontal"
		    	android:gravity="center_vertical"
		    >
		        <TextView
		            android:id="@+id/lab_sendContact"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_username"
		        	style="@style/txtSendStyle"
		        />
		        <EditText
		            android:id="@+id/edit_sendContact"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_marginRight="5dip"
		         	android:layout_toRightOf="@+id/lab_sendContact"
		         	android:hint="@string/hint_username"
		         	style="@style/editSendStyle"
		        />
		    </RelativeLayout>
		    <ImageView
		     	android:layout_width="fill_parent"
		     	android:layout_height="1dip"
		     	android:layout_marginLeft="5dip"
		     	android:layout_marginRight="5dip"
		     	android:layout_gravity="center_horizontal"
		     	android:background="@drawable/div_line"   
		    />
		    <!-- 手机 -->
		    <RelativeLayout
		    	android:id="@+id/send_row_phone"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="8dip"
		    	android:layout_marginBottom="8dip"
		    	android:orientation="horizontal"
		    	android:gravity="center_vertical"
		    >
		        <TextView
		            android:id="@+id/lab_sendPhone"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_phone"
		        	style="@style/txtSendStyle"
		        />
		        <EditText
		            android:id="@+id/edit_sendPhone"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:layout_marginRight="5dip"
		         	android:layout_toRightOf="@+id/lab_sendPhone"
		         	android:phoneNumber="true"
		         	style="@style/editSendStyle"
		        />
		    </RelativeLayout>
		    <ImageView
		     	android:layout_width="fill_parent"
		     	android:layout_height="1dip"
		     	android:layout_marginLeft="5dip"
		     	android:layout_marginRight="5dip"
		     	android:layout_gravity="center_horizontal"
		     	android:background="@drawable/div_line"   
		    />
		    <!-- QQ、 -->
		    <RelativeLayout
		    	android:id="@+id/send_row_qq"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="8dip"
		    	android:layout_marginBottom="8dip"
		    	android:orientation="horizontal"
		    	android:gravity="center_vertical"
		    >
				<TextView
		            android:id="@+id/lab_sendQQ"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_qq"
		        	style="@style/txtSendStyle"
		        />	        
		        <EditText
		            android:id="@+id/edit_sendQQ"
		         	android:layout_width="fill_parent"
		         	android:layout_height="wrap_content"
		         	android:phoneNumber="true"
		         	android:layout_marginRight="5dip"
		         	android:layout_toRightOf="@+id/lab_sendQQ"
		         	style="@style/editSendStyle"
		        />
		        
		    </RelativeLayout>
		</LinearLayout>
		<!-- 交易类型，买或卖 -->
		<RelativeLayout 
		    android:id="@+id/layout_send_pay_type"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/layoutbg1"  
			android:layout_margin="5dip"
			android:orientation="vertical"
			android:gravity="center_vertical"
		>
		    <!-- 价格 -->
		        <TextView
		            android:id="@+id/lab_sendPayType"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	android:text="@string/lab_send_pay_type"
		        	android:layout_centerVertical="true"
		        	style="@style/txtSendStyle"
		        />
		        <RadioGroup 
		            android:id="@+id/radio_sendPayType"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_toRightOf="@+id/lab_sendPayType"
		        	android:layout_centerVertical="true"
		        	android:orientation="horizontal"
		        >
		            <RadioButton 
		                android:id="@+id/radio_sendPayBuyers"
		            	android:layout_width="wrap_content"
		            	android:layout_height="wrap_content"
		            	android:checked="true"
		            	android:layout_marginLeft="10dip"
		            	android:text="@string/lab_send_buyers"  
		            />
		            <RadioButton 
		                android:id="@+id/radio_sendPaySeller"
		            	android:layout_width="wrap_content"
		            	android:layout_height="wrap_content"
		            	android:text="@string/lab_send_seller"  
		            	android:layout_marginLeft="10dip"  
		            />
		        </RadioGroup>
		</RelativeLayout>
		<Button 
		    android:id="@+id/btnToSend"
		    android:layout_width="100dip"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:text="@string/btn_send"
		    android:textSize="18sp"
		    android:textColor="@color/white"
		    android:padding="10dip"
		    android:background="@drawable/btn_red_selector"
		    android:layout_marginTop="15dip"
		    android:layout_marginBottom="20dip"
		    />
		</LinearLayout>
		</ScrollView>
	</LinearLayout>
	<View
	    android:id="@+id/send_view_Model"
	 	android:layout_width="match_parent"
	 	android:layout_height="match_parent"
	 	android:background="#66000000"
	 	android:visibility="gone"
	/>
	<View
	 	android:id="@+id/send_showing_View"
	 	android:layout_width="wrap_content"
	 	android:layout_height="wrap_content"
	 	android:layout_gravity="bottom"
	 	android:visibility="gone"   
	/>
</FrameLayout><!-- From: file:/Users/tianxuefeng/Desktop/AndroidstudioProjects/StefanCity_EN/app/src/main/res/layout/activity_send.xml -->