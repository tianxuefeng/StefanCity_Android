<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	 <RelativeLayout
	     android:layout_width="fill_parent"
	     android:layout_height="50dip"
	     android:background="@color/theme_color"
	     android:orientation="horizontal" >

	     <Button
	         android:id="@+id/btn_user_detail_back"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentLeft="true"
	         android:layout_centerVertical="true"
	         android:layout_marginLeft="5dip"
	         android:background="@drawable/btn_back" />

	     <TextView
	         android:id="@+id/lab_user_detail_title"
	         style="@style/txtAddressStyle"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerHorizontal="true"
	         android:layout_centerVertical="true"
	         android:layout_marginLeft="5dip"
	         android:singleLine="true"
	         android:text="@string/lab_user_info"
	         android:textSize="22sp" />
	 </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/layoutbg1"
        android:orientation="vertical" >
        <!-- 姓名 -->
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dip"
	        android:layout_marginTop="8dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/lab_user_detail_name"
	            style="@style/txtSendStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="@string/lab_register_name" />
	
	        <EditText
	            android:id="@+id/edit_user_detail_name"
	            style="@style/editSendStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:layout_toRightOf="@+id/lab_user_detail_name"
	            android:hint="@string/hint_username" />
	    </RelativeLayout>
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:background="@drawable/div_line" />
		<!-- 邮箱 -->
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dip"
	        android:layout_marginTop="8dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/lab_user_detail_email"
	            style="@style/txtSendStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="@string/lab_email" />
	
	        <EditText
	            android:id="@+id/edit_user_detail_email"
	            style="@style/editSendStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:textColor="@color/color_999"
	            android:layout_toRightOf="@+id/lab_user_detail_email"
	            android:editable="false"
	            android:hint="@string/hint_email" />
	    </RelativeLayout>
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:background="@drawable/div_line" />
	    <!-- 用户密码 -->
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dip"
	        android:layout_marginTop="8dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/lab_user_detail_pawd"
	            style="@style/txtSendStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="@string/lab_password" />
	        <TextView
	            android:id="@+id/edit_user_detail_pawd"
	            style="@style/editSendStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:layout_toRightOf="@+id/lab_user_detail_pawd"
	            android:text="@string/lab_click_change_pawd" />
	    </RelativeLayout>
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:background="@drawable/div_line" />
	    <!-- Phone -->
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dip"
	        android:layout_marginTop="8dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/lab_user_detail_phone"
	            style="@style/txtSendStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="@string/lab_send_phone" />
	
	        <EditText
	            android:id="@+id/edit_user_detail_phone"
	            style="@style/editSendStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:phoneNumber="true"
	            android:layout_toRightOf="@+id/lab_user_detail_phone"
	            />
	    </RelativeLayout>
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:background="@drawable/div_line" />
	    <!-- QQSkype -->
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dip"
	        android:layout_marginTop="8dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/lab_user_detail_qqskype"
	            style="@style/txtSendStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="@string/lab_send_qq" />
	
	        <EditText
	            android:id="@+id/edit_user_detail_qqskype"
	            style="@style/editSendStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:phoneNumber="true"
	            android:layout_toRightOf="@+id/lab_user_detail_qqskype"
	            android:hint="@string/hint_title" />
	    </RelativeLayout>
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:background="@drawable/div_line" />
	    <!-- 用户类型 -->
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="8dip"
	        android:layout_marginTop="8dip"
	        android:gravity="center_vertical"
	        >
	
	        <TextView
	            android:id="@+id/lab_user_detail_memType"
	            style="@style/txtSendStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="@string/lab_status" />
	
	        <EditText
	            android:id="@+id/edit_user_detail_memType"
	            style="@style/editSendStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:editable="false"
	            android:textColor="@color/color_999"
	            android:layout_marginRight="5dip"
	            android:layout_toRightOf="@+id/lab_user_detail_memType"
	            />
	    </RelativeLayout>
    </LinearLayout>

    
    <!-- button -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="8dip"
        android:padding="10dip"
        android:gravity="center_vertical"
        >
        <Button 
		    android:id="@+id/btn_user_detail_update"
		    android:layout_width="100dip"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:text="@string/btn_edit"
		    android:textSize="18sp"
		    android:layout_alignParentLeft="true"
		    android:textColor="@color/white"
		    android:padding="10dip"
		    android:background="@drawable/btn_red_selector"
		    android:layout_marginTop="15dip"
		    android:layout_marginBottom="20dip"
		    />
        <Button 
		    android:id="@+id/btn_user_detail_quit"
		    android:layout_width="100dip"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
		    android:text="@string/btn_back"
		    android:textSize="18sp"
		    android:textColor="@color/white"
		    android:layout_alignParentRight="true"
		    android:padding="10dip"
		    android:background="@drawable/btn_red_selector"
		    android:layout_marginTop="15dip"
		    android:layout_marginBottom="20dip"
		    />
    </RelativeLayout>
</LinearLayout><!-- From: file:/Users/tianxuefeng/Desktop/AndroidstudioProjects/StefanCity_EN/app/src/main/res/layout/activity_user_detail.xml -->