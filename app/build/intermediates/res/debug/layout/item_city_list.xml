<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/item_city_alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#88333333"
        android:paddingLeft="13dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white"
         />

    <ImageView
        android:id="@+id/item_city_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_city_alpha"
        android:layout_marginRight="5.0dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_city_image_view"
        android:layout_below="@id/item_city_alpha"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="6.0dip"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="name"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#212121" />
    <!-- android:layout_toRightOf="@id/image_view" -->

    <TextView
        android:id="@+id/item_city_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_city_name"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/item_city_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="number"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#AAAAAA"
        android:visibility="gone" />

</RelativeLayout><!-- From: file:/Users/tianxuefeng/Desktop/AndroidstudioProjects/StefanCity_EN/app/src/main/res/layout/item_city_list.xml -->